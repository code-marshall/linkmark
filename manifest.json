{
    "manifest_version": 3,
    "name": "LinkMark - Smart Bookmark Manager",
    "version": "1.0.0",
    "description": "Save bookmarks with categories using Gmail OAuth authentication",
    "permissions": [
        "activeTab",
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://your-backend-api.com/*"
    ],
    "oauth2": {
        "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Save Bookmark"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}